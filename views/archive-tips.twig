{% extends "base.twig" %}

{% block content %}
<section class="bg-green-50 py-16">
	<div class="max-w-6xl mx-auto px-4 text-center mb-10">
		<h1 class="text-3xl font-bold text-green-800">Tips Menanam</h1>
		<p class="text-zinc-600 mt-2">Tips-tips berkebun untuk pemula dan pecinta tanaman ðŸŒ±</p>
	</div>

	<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto px-4">
		{% for post in posts %}
			<div class="bg-white rounded-xl shadow-md hover:shadow-xl overflow-hidden transition duration-300 transform hover:scale-105 flex flex-col">
				{% if post.thumbnail %}
					<img src="{{ post.thumbnail.src('medium') }}" alt="{{ post.title }}" class="w-full h-48 object-cover">
				{% endif %}

				<div class="p-5 flex flex-col flex-1 justify-between">
					<h3 class="text-lg font-semibold text-green-800 mb-2">{{ post.title }}</h3>

					<p class="text-sm text-zinc-600 line-clamp-3 mb-3">
						{{ post.excerpt }}
					</p>

					<a href="{{ post.link }}" class="text-green-600 hover:underline text-sm mt-auto">Lihat Detail â†’</a>
				</div>
			</div>
		{% endfor %}
	</div>

	{% if posts.pagination.pages|length > 1 %}
		{% include 'partial/pagination.twig' with { pagination: posts.pagination } %}
	{% endif %}
</section>
{% endblock %}
