{% extends "base.twig" %}
{% block content %}
<article class="max-w-3xl mx-auto px-4 py-16">
	<h1 class="text-3xl font-bold text-green-800 mb-2">
		{{ post.title }}
	</h1>
	{% if post.meta('name') %}
		<h2 class="text-xl font-semibold text-green-600 italic mb-6">
			{{ post.meta('name') }}
		</h2>
	{% endif %}

	{% if post.thumbnail %}
		<img src="{{ post.thumbnail.src('large') }}" alt="{{ post.title }}" class="rounded w-full object-cover mb-6"/>
	{% endif %}

	<div class="prose prose-zinc max-w-none leading-relaxed">
		{{ post.content }}
	</div>

	<a href="{{ site.url }}/tanaman" class="inline-block mt-6 text-green-600 hover:underline text-sm">‚Üê Kembali ke daftar tanaman</a>
</article>
{% endblock %}
