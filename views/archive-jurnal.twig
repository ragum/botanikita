{% extends "base.twig" %}

{% block content %}
<section class="bg-green-50 py-16">
	<div class="max-w-6xl mx-auto px-4 text-center mb-12">
		<h1 class="text-3xl font-bold text-green-800">Jurnal Botani</h1>
		<p class="text-zinc-600 mt-2 max-w-2xl mx-auto">Catatan mendalam seputar dunia tanaman, tips perawatan, dan filosofi hijau yang menginspirasi ðŸŒ±</p>
	</div>

	<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 px-4 max-w-6xl mx-auto">
		{% for post in posts %}
			<div class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-transform duration-300 transform hover:scale-105 flex flex-col h-full">
				{% if post.thumbnail %}
					<img src="{{ post.thumbnail.src('medium') }}" alt="{{ post.title }}" class="w-full h-48 object-cover">
				{% endif %}
				<div class="p-5 flex-1 flex flex-col justify-between">
					<div>
						<h3 class="text-lg font-bold text-green-800 mb-1">{{ post.title }}</h3>
						<p class="text-sm text-zinc-600 line-clamp-3 mb-3">
							{{ post.excerpt }}
						</p>
					</div>
					<div class="mt-auto">
						<a href="{{ post.link }}" class="inline-block text-green-600 hover:underline text-sm">Baca Selengkapnya â†’</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

	{% include 'partial/pagination.twig' with { pagination: posts.pagination, base: site.url ~ '/jurnal' } %}
</section>
{% endblock %}
