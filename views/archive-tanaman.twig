{% extends "base.twig" %}

{% block content %}
<section class="bg-green-50 py-16">
	<div class="max-w-6xl mx-auto px-4 text-center mb-12">
		<h1 class="text-3xl font-bold text-green-800">Tanaman Hias</h1>
		<p class="text-zinc-600 mt-2">Koleksi tanaman yang dirawat dengan cinta & cahaya ğŸŒ¿</p>
	</div>

	<div class="grid gap-8 md:grid-cols-3 px-4 max-w-6xl mx-auto">
		{% for post in posts %}
			<div class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition transform hover:scale-105 duration-300 h-full flex flex-col">
				
				{% if post.thumbnail %}
					<img src="{{ post.thumbnail.src('medium') }}" alt="{{ post.title }}" class="w-full h-48 object-cover">
				{% endif %}

				<div class="p-5 flex flex-col justify-between flex-1">
					<div>
						<h3 class="text-lg font-bold text-green-800 mb-1">{{ post.title }}</h3>
						<p class="text-sm text-zinc-600 line-clamp-3 mb-3">
							{{ post.meta('deskripsi') }}
						</p>

						{% set terms = post.terms('jenis_tanaman') %}
						{% if terms %}
						<div class="flex flex-wrap gap-2 mt-2">
							{% for term in terms %}
								<a href="{{ term.link }}" class="bg-green-100 text-green-700 text-xs px-2 py-1 rounded hover:bg-green-200">
									{{ term.name }}
								</a>
							{% endfor %}
						</div>
						{% endif %}
					</div>

					<div class="mt-4">
						<a href="{{ post.link }}" class="inline-block text-green-600 hover:underline text-sm">Lihat Detail â†’</a>
					</div>
				</div>

			</div>
		{% endfor %}
	</div>
	{% set pagination = posts.pagination %}
	{% if pagination.pages > 1 %}
		<div class="mt-12 flex justify-center">
			<nav class="flex space-x-2 text-sm">
				{% if pagination.prev %}
					<a href="{{ pagination.prev.link }}" class="px-3 py-1 rounded bg-green-100 text-green-800 hover:bg-green-200">â† Sebelumnya</a>
				{% endif %}

				{% for page in pagination.pages %}
					<a href="{{ page.link }}"
						class="px-3 py-1 rounded 
						{% if page.current %}
							bg-green-700 text-white
						{% else %}
							bg-green-100 text-green-800 hover:bg-green-200
						{% endif %}">
						{{ page.title }}
					</a>
				{% endfor %}

				{% if pagination.next %}
					<a href="{{ pagination.next.link }}" class="px-3 py-1 rounded bg-green-100 text-green-800 hover:bg-green-200">Selanjutnya â†’</a>
				{% endif %}
			</nav>
		</div>
	{% endif %}
</section>

<script>
	sessionStorage.setItem('tanaman_referrer', window.location.href);
</script>
{% endblock %}
